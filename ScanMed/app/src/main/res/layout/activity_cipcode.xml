<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CIPCodeActivity">

    <LinearLayout
        android:id="@+id/RL_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offwhite"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
        <Button
            android:id="@+id/IMG_Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_back"
            android:clickable="true"
            android:paddingBottom="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Code CIP"
                    android:textAlignment="center"
                    android:textColor="#2E3135"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sélectionnez une pharmacie"
            android:textAlignment="center"
            android:textColor="@color/blue_plus_fonce"
            android:textSize="23sp" />

        <Spinner
            android:id="@+id/spinner_pharmacy"
            style="@style/CustomSpinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:hint="Sélectionner"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Saisissez un code CIP"
            android:textAlignment="center"
            android:textColor="@color/blue_plus_fonce"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/ETT_Code CIP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_shape"
            android:elevation="@dimen/shadow_size"
            android:hint="ex : 3400932320189"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="text"
            android:textSize="15dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:paddingStart="10dp"
            android:paddingTop="2dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
>
        <ImageView
            android:id="@+id/imageview_info_svg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/info" />

        <!-- Information Text about CIP Code -->
        <TextView
            android:id="@+id/textview_cip_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_cip_code"
            android:textStyle="italic"
            android:fontFamily="@font/poppins"
            android:text="Le code CIP ou Présentation Identifier Code est un code numérique à 7 ou 13 chiffres qui permet d’identifier une présentation (ou un conditionnement) d’un médicament."
            android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Où trouver le code CIP ?"
            android:textAlignment="center"
            android:textColor="@color/other_other_grey"
            android:textSize="23sp" />
        <!-- Example Image of CIP Code -->
        <ImageView
            android:id="@+id/imageview_cip_example"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_below="@+id/textview_cip_info"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:contentDescription="Où trouver le code CIP ?"
            android:scaleType="fitCenter"
            android:src="@drawable/code_cip_ex" />

        <Button
            android:id="@+id/buttonAskReset"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/classic_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirmer le code CIP"
            android:textColor="@color/white"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>